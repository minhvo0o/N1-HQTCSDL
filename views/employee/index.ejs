              <th>DienThoaiNV</th>
              <th>GioiTinhNV</th>
            </tr>
          </thead>
          <tbody>
            <% for (let employee of list) { %>
              <tr>
                <td scope="row"> <%= employee.MSTNhanVien %></td>
                <td><%= employee.TenNV %></td>
                <td><%= employee.NgaySinhNV %></td>
                <td><%= employee.DiaChiNV %></td>
                <td><%= employee.TenTKNH %></td>
                <td><%= employee.SoTKNH %></td>
                <td><%= employee.EmailNV %></td>
                <td><%= employee.DienThoaiNV %></td>
                <td><%= employee.GioiTinhNV %></td>
              </tr>
            <% } %>
          </tbody>
        </table>

